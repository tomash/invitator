.group
  = f.label :fullname, t("activerecord.attributes.profile.fullname", :default => "Fullname"), :class => :label
  = f.text_field :fullname, :class => 'text_field'
  %span.description Ex: Joe Sixpack
.group
  = f.label :address, t("activerecord.attributes.profile.address", :default => "Address"), :class => :label
  = f.text_field :address, :class => 'text_field'
  %span.description Ex: 1600 Amphitheatre Parkway
.group
  = f.label :city, t("activerecord.attributes.profile.city", :default => "City"), :class => :label
  = f.text_field :city, :class => 'text_field'
  %span.description Ex: Mountain View
.group
  = f.label :province, t("activerecord.attributes.profile.province", :default => "Province"), :class => :label
  = f.text_field :province, :class => 'text_field'
  %span.description Ex: California
.group
  = f.label :country, t("activerecord.attributes.profile.country", :default => "Country"), :class => :label
  = f.text_field :country, :class => 'text_field'
  %span.description Ex: USA
.group
  = f.label :postal_code, t("activerecord.attributes.profile.postal_code", :default => "Postal code"), :class => :label
  = f.text_field :postal_code, :class => 'text_field'
  %span.description Ex: 94043
.group
  = f.label :avatar, t("activerecord.attributes.profile.avatar", :default => "Avatar"), :class => :label
  = f.file_field :avatar
  = image_tag @profile.avatar.url(:thumb), :class => 'avatar'
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), profile_path, :class => "text_button_padding link_button"
