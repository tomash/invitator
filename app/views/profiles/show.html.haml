.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_profile_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", profile_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.profile.email", :default => t("activerecord.labels.email", :default => "E-mail"))
          \:
        = @profile.email
      %p
        %b
          = t("activerecord.attributes.profile.fullname", :default => t("activerecord.labels.fullname", :default => "Fullname"))
          \:
        = @profile.fullname
      %p
        %b
          = t("activerecord.attributes.profile.address", :default => t("activerecord.labels.address", :default => "Address"))
          \:
        = @profile.address
      %p
        %b
          = t("activerecord.attributes.profile.city", :default => t("activerecord.labels.city", :default => "City"))
          \:
        = @profile.city
      %p
        %b
          = t("activerecord.attributes.profile.province", :default => t("activerecord.labels.province", :default => "Province"))
          \:
        = @profile.province
      %p
        %b
          = t("activerecord.attributes.profile.country", :default => t("activerecord.labels.country", :default => "Country"))
          \:
        = @profile.country
      %p
        %b
          = t("activerecord.attributes.profile.postal_code", :default => t("activerecord.labels.postal_code", :default => "Postal code"))
          \:
        = @profile.postal_code
      %p
        %b
          = t("activerecord.attributes.profile.avatar", :default => t("activerecord.labels.avatar", :default => "Avatar"))
          \:
        = image_tag @profile.avatar.url(:thumb)
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_profile_path, :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), profile_path, :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
